{
    "functions": {
        "source": "functions",
        "codebase": "default",
        "runtime": "nodejs20"
    },
    "hosting": [
        {
            "target": "frontend",
            "public": "frontend/out",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "headers": [
                {
                    "source": "**/*.html",
                    "headers": [
                        {
                            "key": "Cache-Control",
                            "value": "no-cache"
                        }
                    ]
                },
                {
                    "source": "/",
                    "headers": [
                        {
                            "key": "Cache-Control",
                            "value": "no-cache"
                        }
                    ]
                }
            ],
            "rewrites": [
                {
                    "source": "/api/**",
                    "function": "api"
                },
                {
                    "source": "**",
                    "destination": "/index.html"
                }
            ]
        }
    ],
    "firestore": {
        "rules": "firestore.rules"
    },
    "storage": {
        "rules": "storage.rules"
    }
}